<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/recyclerview_header"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/header_navigation"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/margin_bottom"
        android:layout_marginBottom="@dimen/margin_bottom"
        android:orientation="vertical">
        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/nav_menu_circular_image"
            android:layout_width="@dimen/dim_circularImage"
            android:layout_height="@dimen/dim_circularImage"
            android:src="@drawable/circular_foto"
            app:civ_border_color="#fff"
            app:civ_border_width="1dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="5"
            app:civ_shadow_color="#3f51b5"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kevin Saucedo"
            android:textColor="#fff"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User002_@outlook.com"
            android:textColor="#fff"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>